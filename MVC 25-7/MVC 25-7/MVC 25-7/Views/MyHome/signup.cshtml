@model MVC_25_7.Models.NewUser

@{
    ViewBag.Title = "انشاء حساب";
}

<main>

    <h2 id="title">.@ViewBag.Title</h2>

    <p>نرحب بك في عائلتنا</p>

    <div style="width:45%;">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="form-group" style="width:40%;">
                    @Html.Label("fName", "الاسم الأول")

                    <div class="col-md-10" style="width:100%;">
                        @Html.EditorFor(model => model.fName, new { htmlAttributes = new { @class = "form-control", @placeholder = "ادخل الاسم الأول" } })
                        @Html.ValidationMessageFor(model => model.fName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="width:40%;">
                    @Html.Label("lName", "اسم العائلة")
                    <div class="col-md-10" style="width:100%;">
                        @Html.EditorFor(model => model.lName, new { htmlAttributes = new { @class = "form-control", @placeholder = "ادخل اسم العائلة" } })
                        @Html.ValidationMessageFor(model => model.lName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group" style="width:40%;">
                    @Html.Label("userName", "اسم المستخدم")
                    <div class="col-md-10" style="width:100%;">
                        @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control", @placeholder = "ادخل اسم المستخدم" } })
                        @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                        <p>@ViewBag.Message</p>
                        
                    </div>
                </div>

                <div class="form-group" style="width:40%;">
                    @Html.Label("Age", "العمر")
                    <div class="col-md-10" style="width:100%;">
                        @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", @placeholder = "ادخل العمر" } })
                        @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="form-group" style="width:100%;">
                    @Html.Label("email", "البريد الالكتروني")
                    <div class="col-md-10" style="width:100%;">
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @placeholder = "ادخل البريد الالكتروني" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        <p>@ViewBag.Message</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group" style="width:100%;">
                    @Html.Label("password", "كلمة السر")
                    <div class="col-md-10" style="width:100%;">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "ادخل السر" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="إنشاء حساب" class="btn btn-dark" style="color: #283618" />
                </div>
            </div>

        }

    </div>

    <p>
        لديك حساب؟ قم
        <a href="@Url.Action("Login", null, new { area = string.Empty, controller = "MyHome" }, Request.Url.Scheme)">بالدخول في حسابك</a>
    </p>


</main>


