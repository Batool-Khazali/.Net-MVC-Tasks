@model MVC_25_7.Models.NewUser

@{
    ViewBag.Title = "PasswordEdit";
}

<h2>PasswordEdit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>NewUser</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group" style="width:100%;">
        @Html.Label("oldPwd", "كلمة السر القديمة")
        <div class="col-md-10" style="width:100%;">
            <input type="text" class="form-control" placeholder="اعد ادخال السر" id="oldPwd" name="oldPwd" />
            @ViewBag.old
        </div>
    </div>

    <div class="form-group" style="width:100%;">
        @Html.Label("newPwd", "كلمة السر الجديدة")
        <div class="col-md-10" style="width:100%;">
            <input type="text" class="form-control" placeholder="اعد ادخال السر" id="newPwd" name="newPwd" />
        </div>
    </div>

    <div class="form-group" style="width:100%;">
        @Html.Label("confirmPwd", "تأكيد كلمة السر")
        <div class="col-md-10" style="width:100%;">
            <input type="text" class="form-control" placeholder="اعد ادخال السر" id="confirmPwd" name="confirmPwd" />
            @ViewBag.con
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
