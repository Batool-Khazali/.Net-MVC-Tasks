@model MVC_Code_first_19_9.Models.Classes

@{
    ViewBag.Title = "Delete";
}


<h3>Are you sure you want to delete this?</h3>
<h5>You won't be able to revert this! Deleting this would result in deleting all students and tasks that may fall under this class.</h5>

<div>
    <h4>Classes</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
    </dl>

    <h4>Students in this class</h4>
    <ul>
        @if (Model.student != null && Model.task.Any())
        {
            foreach (var Item in Model.student)
            {
                <li>@Html.DisplayFor(modelItem => Item.Name)</li>
            }
        }
        else
        {
            <li>No student assigned for this class.</li>
        }
    </ul>

    <h4>Tasks for this class</h4>
    <ul>
        @if (Model.task != null && Model.task.Any())
        {
            foreach (var taskItem in Model.task)
            {
                <li>@Html.DisplayFor(modelItem => taskItem.Name)</li>
            }
        }
        else
        {
            <li>No tasks assigned for this class.</li>
        }
    </ul>

    @using (Html.BeginForm("Delete", "Classes", FormMethod.Post, new { id = "deleteForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="button" value="Delete" class="btn btn-default" id="DeleteBtn" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#DeleteBtn').on('click', function (e) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this! There might be  students or tasks that may fall under this class.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: "Deleted!",
                            text: "Your file has been deleted.",
                            icon: "success"
                        });
                        $('#deleteForm').submit(); // Submit the form
                    }
                });
            });
        });
    </script>
}
